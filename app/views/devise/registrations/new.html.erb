<div class="form">
  <h2 class="form__title">新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form__group">
      <%= f.label :name, "名前", class: "form__label" %>
      <%= f.text_field :name, autofocus: true, class: "form__input" %>
    </div>

    <div class="form__group">
      <%= f.label :email, "メールアドレス", class: "form__label" %>
      <%= f.email_field :email, class: "form__input" %>
    </div>

    <div class="form__group">
      <%= f.label :password, "パスワード", class: "form__label" %>
      <%= f.password_field :password, class: "form__input" %>
    </div>

    <div class="form__group">
      <%= f.label :password_confirmation, "確認用パスワード", class: "form__label" %>
      <%= f.password_field :password_confirmation, class: "form__input" %>
    </div>

    <%= f.submit "登録", class: "form__submit" %>
  <% end %>

  <%= link_to "ログインはこちら", new_user_session_path, class: "form__link" %>
</div>





