<div class="AccountFormWrapper">
  <section class="AccountFormContainer">
    <h2 class="AccountFormContainer__title">新規登録</h2>

    <div class="Form AccountForm">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="mb-3">
          <%= f.label :name, "ユーザー名", class: "form-label Form__label-required" %>
          <%= f.text_field :name, autocomplete: "name", placeholder: "ユーザー名を入力", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "メールアドレス", class: "form-label Form__label-required" %>
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレスを入力", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "パスワード", class: "form-label Form__label-required" %>
          <%= f.password_field :password, placeholder: "パスワードを入力", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "確認用パスワード", class: "form-label Form__label-required" %>
          <%= f.password_field :password_confirmation, placeholder: "確認用パスワードを入力", class: "form-control" %>
        </div>

        <%= f.submit "新しいアカウントを作成", class: "btn mb-3 AccountForm__button AccountForm__button--primary" %>
      <% end %>

      <%= link_to "ログインはこちら", new_user_session_path, class: "btn AccountForm__button AccountForm__button--secondary" %>
    </div>
  </section>
</div>





