<!-- 検索バー -->
<%= render "shared/search" %>

<!-- ルーム一覧 -->
<div class="container RoomsContainer">
  <p class="RoomsContainer__result">
    <%= pluralize(@rooms.count, "件の施設") %>が見つかりました
  </p>

  <% if @rooms.present? %>
    <% @rooms.each do |room| %>
      <ul class="RoomList">
        <li class="Room">
          <% if room.image.attached? %>
            <%= image_tag(room.image.presence || "default/default-image.png", class: "RoomCard__image") %>
          <% else %>
            <!-- デフォルト画像 -->
            <%= image_tag "default/default-image.png", class: "RoomDetails__image" %>
          <% end %>

          <div class="RoomBodyWrapper">
            <p class="Room__name"><%= room.name %></p>
            <p class="Room__address"><%= room.address %></p>
            <p class="Room__content"><%= room.description %></p>
            <div class="RoomFooter">
              <p class="Room__price">¥<%= number_with_delimiter(room.price) %>/泊</p>
              <%= link_to "詳細はこちら", room_path(room), class: "Room__link" %>
            </div>
          </div>
        </li>
      </ul>
    <% end %>
  <% else %>
    <div class="">
      <p>現在、施設が登録されていません。</p>
    </div>
  <% end %>
</div>