<!-- 検索バー -->
<%= render "shared/search" %>

<!-- ルーム詳細 -->
<div class="container RoomDetailsContainer">
  <div class="RoomDetailsHeader">
    <%= link_to :back, class: "RoomDetailsHeader__link" do %>
      <i class="bi bi-arrow-left-short">戻る</i>
    <% end %>
  </div>

  <div class="RoomDetails">
    <% if @room.image.attached? %>
      <%= image_tag(@room.image.presence || "default/default-image.png", class: "RoomCard__image") %>
    <% else %>
      <!-- デフォルト画像 -->
      <%= image_tag "default/default-image.png", class: "RoomDetails__image" %>
    <% end %>

    <div class="RoomDetailsBody">
      <div class="RoomDetailsBody__name-and-price">
        <p class="RoomDetails__name"><%= @room.name %></p>
        <p class="RoomDetails__price">¥<%= number_with_delimiter(@room.price) %>/泊</p>
        <p class="RoomDetails__address"><%= @room.address %></p>
        <p class="RoomDetails__content"><%= @room.description %></p>
      </div>

      <!-- 予約日時 -->
      <div class="ReservationForm">
        <%= form_with model: @reservation, url: reservations_path, method: :post, local: true do |f| %>


          <div class="ReservationForm__input-container">
            <div class="ReservationForm__input-group">
              <label for="reservation_start_date">チェックイン</label>

              <div class="ReservationForm__input ReservationForm__input--date">
                <%= f.text_field :start_date, placeholder: "---- / -- / --", class: "form-control js-picker" %>
              </div>
            </div>

            <div class="ReservationForm__input-group">
              <%= f.label :end_date, "チェックアウト" %>
              <div class="ReservationForm__input ReservationForm__input--date">
                <%= f.text_field :end_date, placeholder: "---- / -- / --", class: "form-control js-picker" %>
              </div>
            </div>

            <div class="ReservationForm__input-group ReservationForm__input-group--person-count">
              <%= f.label :person_num, "人数" %>
              <%= f.number_field :person_num, placeholder: "0", class: "form-control ReservationForm__input ReservationForm__input--person-count" %>
              <span>人</span>
            </div>
          </div>

          <% if @user %>
            <%= f.hidden_field :user_id, value: @user.id %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.submit "予約する", class: "btn ReservationForm__button" %>
          <% else %>
            <%= link_to "ログイン", new_user_session_path %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>