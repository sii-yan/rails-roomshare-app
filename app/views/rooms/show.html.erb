<!-- 検索バー -->
<%= render "shared/search" %>

<!-- ルーム詳細 -->
<div class="container RoomDetailsContainer">
  <div class="RoomDetailsHeader">
    <%= link_to :back, class: "RoomDetailsHeader__link" do %>
      <i class="bi bi-arrow-left-short">戻る</i>
    <% end %>
  </div>

  <div class="RoomDetails">
    <% if @room.image.attached? %>
      <%= image_tag room.image, class: "RoomDetails__image" %>
    <% else %>
      <!-- デフォルト画像 -->
      <%= image_tag "default/default-image.png", class: "RoomDetails__image" %>
    <% end %>


    <div class="RoomDetailsBody">
      <div class="RoomDetailsBody__name-and-price">
        <p class="RoomDetails__name"><%= @room.name %></p>
        <p class="RoomDetails__price">¥<%= number_with_delimiter(@room.price) %>~</p>
      </div>
        <p class="RoomDetails__address"><%= @room.address %></p>
        <p class="RoomDetails__content"><%= @room.description %></p>

      <!-- 予約日時 -->
      <div class="ReservationForm">
        <%= form_with model: @reservation, url: confirm_reservations_path, method: :post, scope: :reservation, local: true do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <div class="ReservationForm__input-container">
            <div class="ReservationForm__input-group">
              <%= f.label :end_date, "チェックイン" %>

              <div class="ReservationForm__input ReservationForm__input--date">
                <%= f.date_field :start_date, placeholder: "---- / -- / --", class: "form-control js-picker" %>
              </div>
            </div>

            <div class="ReservationForm__input-group">
              <%= f.label :end_date, "チェックアウト" %>

              <div class="ReservationForm__input ReservationForm__input--date">
                <%= f.date_field :end_date, placeholder: "---- / -- / --", class: "form-control js-picker" %>
              </div>
            </div>

            <div class="ReservationForm__input-group ReservationForm__input-group--person-count">
              <%= f.label :person_num, "人数" %>

              <%= f.number_field :person_num, placeholder: "1", min: 1, class: "form-control ReservationForm__input ReservationForm__input--person-count" %>
              <span>人</span>
            </div>
          </div>

          <% if user_signed_in? %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.submit "予約する", class: "btn ReservationForm__button" %>
          <% else %>
            <%= link_to "ログイン", new_user_session_path, class: "btn ReservationForm__button" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>