<div class="FirstView">
  <section class="container">
    <h2 class="FirstView__title">
      ROOM SHAREで<br>
      まだ体験したことのない<br>
      旅をしよう
    </h2>

    <div class="FirstViewSearch">
      <%= form_for :rooms_search, url: search_rooms__path, method: :get do |f| %>
        <%= f.text_field :area, placeholder: "エリア名を入力", class: "form-control FirstViewSearch__input" %>
        <%= f.submit "検索", class: "btn FirstViewSearch__button" %>
      <% end %>
    </div>
  </section>
</div>